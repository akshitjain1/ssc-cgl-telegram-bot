# Production Environment Variables for Render.com
# Copy these values to your Render service environment variables

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username_here

# AI Service (Get from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# Admin Configuration (Your Telegram User ID)
ADMIN_USER_ID=your_telegram_user_id_here

# News API (Optional - get from newsapi.org)
NEWS_API_KEY=your_news_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///database/user_data.db

# Scheduling Configuration
ENABLE_SCHEDULER=true
TIMEZONE=Asia/Kolkata

# Feature Flags
ENABLE_CURRENT_AFFAIRS=true
ENABLE_SPACED_REPETITION=true
ENABLE_DAILY_VOCAB=true

# Content Generation Settings
DAILY_VOCAB_COUNT=10
DAILY_IDIOMS_COUNT=5
DAILY_GK_COUNT=10
CONTENT_DIFFICULTY_MIX=easy:40,medium:40,hard:20

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Python Configuration (Important for emoji support)
PYTHONIOENCODING=utf-8
